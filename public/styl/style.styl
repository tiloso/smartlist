    font-size 20px
    color #59595b
    text-align center
    padding-top 10px

    #droppable
      height 2px

  .label.active
    #droppable
      background-color cSmartlist


.day:first-of-type
  .label
    color cSmartlistDark
    font-weight 500


.ui-draggable-dragging
  z-index 2
  opacity 0.85


.tasks
  margin-bottom 10px
  font-size 16px
  color #272425
  text-align left
  font-weight normal


  .task.active
    .droppable
      background-color cSmartlist


  .task
    .droppable
      height 2px

    .display
      padding 5px 0
      margin 3px 0
      background-color #fff
      height 18px
      font-weight 400


      label
        display block
        cursor pointer
        width 100%
        padding 0 28px
        box-sizing border-box
        ellipsis()

      .destroy, .checkbox
        display block
        position absolute
        cursor pointer
        top 0

        .img
          padding 0
          margin 0

      .checkbox
        left 0
        padding 6px 6px
        width 16px
        height 16px

        .img
          width 16px
          height 16px
          background-image url('/img/checkbox.png')

      .checkbox:active
        .img
          background-position 0 -16px

      .destroy
        right 0
        padding 8px 8px
        width 12px
        height 12px

        .img
          width 12px
          height 12px
          background-image url('/img/destroy.png')


      .destroy:active
        .img
          background-position 0 -12px


    .edit
      display none


  .task[ data-view='editing' ]
    margin-top -1px
    padding 0

    .edit
      display block
      width 100%

    .display
      display none







