
// TRANSPARENT MIXINS
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments


box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments


linear-gradient()
   background -webkit-linear-gradient( arguments )
   background -moz-linear-gradient( arguments )
   background -ms-linear-gradient( arguments )
   background -o-linear-gradient( arguments )
   // background linear-gradient( arguments )


ellipsis()
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

box-sizing()
  box-sizing arguments
  -moz-box-sizing arguments
  -ms-box-sizing arguments
  -webkit-box-sizing arguments


// COLORS
cBackground = #f8f8f9
cSmartlist = #86c7d4
cSmartlistDark = #559dad
cBorder = #d5d6d8
cGrey = #59595b
// cDarkGrey = #ededed
cDarkGrey = #e7e7e7



// MAIN
html, body
  font-family Helvetica Neue, Arial, Sans-Serif
  font-size 16px
  background cBackground


a
  color cSmartlistDark
  text-decoration none


header
  font-size 12px
  text-align right
  margin 15px 10px


footer
  text-align center
  font-size 11px
  padding-bottom 12px
  padding-top 300px

  a
    margin 0 20px
    color cGrey

#msg
  background yellow




// START => LOGIN, REGISTER
article#start
  margin 0 auto
  width 240px
  padding-bottom 20px
  padding-top 100px


  img
    margin 10px 26px

  form
    margin-top 20px


  input[ type='text' ], [ type='password' ], [ type='submit' ]
    padding 5px
    border-width 1px
    font-size 13px
    box-shadow #a6a8aa 1px 1px 0
    display block

  input[ type='text' ], [ type='password' ]
    color cGrey
    width 228px
    height 30px

  input[ type='text' ]
    border-radius 4px 4px 0 0

  input[ type='password' ]
    border-radius 0 0 4px 4px

  input[ type='submit' ]
    height 40px
    width 240px
    border-radius 4px
    margin 15px 0
    font-weight 600
    border-top 1px solid #96d1f8
    background cSmartlistDark
    linear-gradient top, cSmartlist, cSmartlistDark
    color #fcfcfc

  input[ type='submit' ]:hover
    border-top-color #6ab1bf
    background #6ab1bf
    color #f5f5f5

  input[ type='submit' ]:active
    border-top-color #54929e
    background #54929e


  p.start
    color cGrey
    font-size 11px
    width 100%
    text-align center


// TASKS
#howto
  // border 1px solid #9c9c9c
  border 1px solid cDarkGrey
  border-radius 4px
  background cDarkGrey
